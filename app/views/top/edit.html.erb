<div class="contents row">
  <%= form_tag("/top/#{@tweet.id}", method: :patch ) do %>
    <h3>
      編集する
    </h3>
    <input type="text" name="title" value="<%= @tweet.title %>" placeholder="title" autofocus="true">
    <textarea name="review" placeholder="text" rows="10" cols="30"><%= @tweet.review %></textarea>
    <input type="submit" value="SENT">
  <% end %>
</div>